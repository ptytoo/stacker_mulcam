<br><br>
<h3 align="left">분야별 회사목록</h3>
<br>
<!-- <div class="container"> -->
  <div class="row">
    <!-- First column -->
    <div class="col-2">
      <!-- Navigation -->
      <div class="list-group" id="list-tab" role="tablist">
        <% @company_fields.each do |company_field| %>
        <a class="list-group-item list-group-item-action" id="list-<%= company_field.id %>-list" data-toggle="list" href="#list-<%= company_field.id %>" role="tab" aria-controls="<%= company_field.id %>"><%= company_field.name %></a>
        <!-- <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">Profile</a> -->
        <% end %>
      </div>
    </div>
    <!-- First column -->
    <!-- Second column -->
    <div class="col-10">
      <!-- Content -->
      <div class="tab-content" id="nav-tabContent">
        <% @company_fields.each do |company_field| %>
          <div class="tab-pane fade show" id="list-<%= company_field.id %>" role="tabpanel" aria-labelledby="list-<%= company_field.id %>-list">
            <div class="col-sm-10">
              <div class="row">
                <% @companies = Company.where(company_field_id: company_field)%>
                <% @companies.each do |c|%>
                <div class="col-sm-4 col-lg-3 col-xs-3">
                  <div class="card" style="width: 15rem; height: 20em">
                      <img src="<%=c.logo_url%>" data-toggle="tooltip" title="<%=c.name%>" id: "#{c.name}">
                      <div class="card-body">
                          <h4 class="card-title"><%=c.name%></h4>
                          <a href="<%=detail_company_path(c)%>" class="btn btn-primary">자세히 보기</a>
                      </div>
                  </div>
                  <br>
                </div>
                <% end %>
              </div>
            </div>
            </div>
        <% end %>
      <!-- <!— Content —> -->
    </div>
    <!-- <!— Second column —> -->
  </div>
</div>
<!-- <!— </div> —> -->
<% if user_signed_in? &&  current_user.admin? %>
<%= link_to 'New Company field', new_company_field_path %>
<% end %>

