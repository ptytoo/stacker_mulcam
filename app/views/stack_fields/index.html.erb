<p id="notice"><%= notice %></p>

<h1>Listing Stack Fields</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stack_fields.each do |stack_field| %>
      <tr>
        <td><%= stack_field.name %></td>
        <td><%= link_to 'Show', stack_field %></td>
        <% if user_signed_in? &&  current_user.admin? %>
        <td><%= link_to 'Edit', edit_stack_field_path(stack_field) %></td>
        <td><%= link_to 'Destroy', stack_field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? &&  current_user.admin? %>
<%= link_to 'New Stack field', new_stack_field_path %>
<% end %>
