<% unless notice.nil? %>
    <p class="alert alert-success alert-dismissible fade show" role="alert" id="notice"><%= notice %></p>
<% end %>

<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/company_fields"><%= @company.company_field.name%></a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @company.name %></li>
  </ol>
</nav>

<div class="container">
  <div class="col-sm-12">
    <div class="media">
      <% imgl = @company.logo_url.gsub!(":","/")%>
      <div id="frame1"><img src="<%=imgl%>" title="<%=@company.name%>" id: "#{@company.name}" size=200></div>
    </div>
    <div class="media-body" id="desc">
      <h5 class="mt-0" style="font-size: 30px;"><strong><%= @company.name %></strong></h5>
    </div>

    <br>

    <p class="text-xl-left"><%= @company.describe %></p>

    <br>
    <p>
      <strong><%=@company.name%>의 서비스</strong><br><br>
      <% @services.each do |service| %>
      <%= link_to "<button type='button' class='btn btn-outline-primary btn-pill'>#{service.name}</button>".html_safe, "/services/#{service.id}" %></td>
      <% end %>
    </p>
    <br><br>
    <%= link_to 'Back', company_fields_path %>
    <%#= link_to 'Back', company_field_path(@company.company_field_id) %>
  </div>
</div>

<style>
  #frame1 {
    padding: 20px;
  }
  #desc {
    margin-top:40px;
  }
</style>
