<div class="col-md-10 col-md-offset-10">
    <div id="group_user_id" class="form-group">
      <%= form_for(@company, url: companies_path, method: :post) do |f|%>
      <div class="form-group col-xs-12" align="left">
        <%= f.label :회사명 %>
      </div>
      <div class="form-group col-xs-12">
        <%= f.text_field :name, class: 'form-control', placeholder: '회사명을 입력해주세요', id: 'name' %>
      </div>
      <div class="form-group col-xs-12" align="left">
        <%= f.label :회사사이트주소 %>
      </div>
      <div class="form-group col-xs-12">
        <%= f.text_field :site_url, class: 'form-control', placeholder: '회사 URL을 입력해주세요', id: 'site_url' %>
      </div>
      <div class="form-group col-xs-12" align="left">
        사업 분야 :
        <select name="companies[company_field_id]" id="field_id" class='btn btn-small btn-dark-solid full-width btn-rounded' >
          <% @company_fields.each do |field| %>
            <option class="enter" value="<%=field.id%>"><%= field.name %></option>
          <% end %>
        </select>
        <%= f.hidden_field :company_field_id, id: "company_field_id"%>
      </div><br>

      <div class="form-group col-xs-12" align="left">
        <div>
          회사 소개 :
          <%= f.text_field :describe, class: 'form-control', size: "100", placeholder: "회사 소개", id: "describe" %>
        </div>
      </div>
      <!-- <div class="form-actions"> -->
      <%= f.button :submit, class: 'btn btn-small btn-dark-solid full-width btn-rounded' %>
      <%end%>
  </div>
</div>

