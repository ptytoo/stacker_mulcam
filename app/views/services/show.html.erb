<% unless notice.nil? %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>


<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/company_fields"><%= @service.company.company_field.name%></a></li>
    <li class="breadcrumb-item"><a href="/companies/<%=@service.company_id%>/detail"><%= @service.company.name%></a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @service.name %>  (조회수 : <%= "#{@hit_post.unique_impression_count}" %>)</li>
  </ol>
</nav>


<div class="container">

  <% if user_signed_in? && current_user.admin? %>
    <%= link_to 'Edit', edit_service_path(@service) %> |
  <% end %>
  <%= link_to 'Back', detail_company_path(@service.company_id), class: "fa fa-angle-left fa-1x" %>

  <div class="media">
    <div id="frame1"><img src="<%=@service.logo_url%>" title="<%=@service.name%>" id: "#{@company.name}" size=200></div>
    <div class="media-body" id="desc">
      <h5 class="mt-0" style="font-size: 30px;"><strong><%= @service.name %></strong></h5>
      <a href="<%= @service.site_url %>" target="_blank"><%= @service.site_url %></a>
    </div>
  </div>

  <p>
    <%= @service.describe %>
  </p>

  <p>
    <strong>Company:</strong>
    <%= @service.company.name %>
  </p>

  <p>
    <strong>Stack:</strong><br>
    <% @f_name = ['Language','Database','Server','Front-end','Native_App','Etc'] %>
    <% @f_name.each_with_index do |f, index|%>
      <%= f %><br>
      <p>
        <%@stacks.each do |st|%>
          <% if st.stack.stack_field_id == (index+1)%>
            <a href="/stacks/<%=st.stack_id%>" data-toggle="tooltip" title="<%=st.stack.name%>">
              <%= image_tag "https://s3.ap-northeast-2.amazonaws.com/dahisy-4th-project/Stack/#{st.stack.stack_field.name}/#{st.stack.name.capitalize}.png", id: "#{st.stack.name}", class: "mr-3", width: "50", height: "50" %>
            </a>
          <%end%>
        <%end%>
      </p>
    <% end %>
  </p>
  <br>

</div>

<style>
  #frame1 {
    padding: 20px;
  }
  #desc {
    margin:40px;
  }
</style>
