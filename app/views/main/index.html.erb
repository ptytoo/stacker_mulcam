 <!-- <form class="my-2 my-lg-0"> -->
   <div class="row">
     <div class="col-lg-6 mx-auto">
     <h4 class="text-black" align="center">Git 트렌드</h4>
     <table class="table">
       <thead>
         <tr>
           <th scope="col">No.</th>
           <th scope="col">Language</th>
           <th scope="col">Stars</th>
         </tr>
       </thead>
       <tbody>
         <% @gitdata.each do |git|%>
         <%if git.name == 'C++'%>
           <%git.name = 'c pp'%>
         <%end%>
         <% st = Stack.where('lower(name)=?',git.name.downcase).first%>
         <tr>
           <td><%= git.id %></td>
           <td>
             <img src="https://s3.ap-northeast-2.amazonaws.com/dahisy-4th-project/Stack/<%=st.stack_field.name%>/<%= git.name.capitalize %>.png" width="40">
           </td>
           <!-- <td><%= git.name %></td> -->
           <td><%= git.count %></td>
         </tr>
         <% end %>
       </tbody>
     </table>
   </div>
 </div>

