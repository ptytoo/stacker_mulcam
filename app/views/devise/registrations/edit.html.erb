<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "변경을 원할 시에만 작성해 주세요", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: "비밀번호 변경을 위해 현재 비밀번호를 입력해 주세요", required: true %>
    <%= f.input :nickname, required: true, autofocus: true %>
    <%= f.input :phone, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p><%= link_to "계정삭제", registration_path(resource_name), data: { confirm: "계정을 삭제하시겠습니까?" }, method: :delete %></p>

<%= link_to "Back", :back %>
